{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "typings",
    "declarationMap": true,
    "diagnostics": true,
    "emitBOM": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "preserveWatchOutput": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "source",
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "source/**/*"
  ],
  "typeRoots" : [
    "./typings"
  ]
}
